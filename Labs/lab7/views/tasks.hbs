<form method="GET" action="/new">
    <div class="row">
        <div class="col mt-3">
            <h3><a href="/">Οι εργασίες μου</a></h3>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <label for="item">Προσθήκη εργασίας:</label>
        </div>
    </div>

    <div class="row">
        <div class="col-9">
            <input type="text" name="taskName" id="item" class="input-lg">
        </div>
        <div class="col">
            <button type="submit">Νέα εργασία</button>
        </div>
    </div>

    <div class="row ">
        <div class="col mt-3">
            <ul class="list-group">
                {{#each tasks}}
                <li class="list-group-item {{#if status}} task-status-inactive {{/if}}">
                    {{!-- στο href δηλώνουμε σε ποιο path θα στοχεύει το κλικ που θα προκαλεί το toggle --}}
                    {{!-- επίσης, κάθε τασκ έχει την πληροφορία για το status του. αν είναι "1" τότε --}}
                    {{!-- ας είναι π.χ., style="text-decoration: line-through;" --}}
                    {{!-- <form action="/remove"></form> --}}
                    <a href="/toggle/{{id}}">{{task}} </a> - {{created_at}} <a href="/delete/{{id}}"
                        class="btn btn-sm btn-danger">Delete</a>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
</form>